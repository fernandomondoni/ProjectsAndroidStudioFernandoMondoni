<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".activity.ResultadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Label"
            android:text="Dados" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="Valor original" />

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="Data de vencimento" />

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="Data de pagamento" />

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="Juros" />

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="Multa" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/valorOriginal_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$0,00"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/dataVencimento_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/1980"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/dataPagamento_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/01/1980"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/juros_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$0,00"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/multa_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$0,00"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="25dp"
                android:background="@color/colorBlack"/>

        </LinearLayout>

        <TextView
            style="@style/Label"
            android:text="Resultado"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">


                <TextView
                    style="@style/DadosTextView"
                    android:text="Total a pagar"
                    android:layout_marginTop="20dp"/>

                <TextView
                    style="@style/DadosTextView"
                    android:layout_marginTop="20dp"
                    android:text="DiferenÃ§a"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/totalPagar_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$0,00"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/diferenca_resultado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$0,00"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/voltar_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="Voltar"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
